{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ ticket.prix }}</td>
            </tr>
            <tr>
                <th>Emplacement</th>
                <td>{{ ticket.emplacement }}</td>
            </tr>
            <tr>
                <th>Choisi</th>
                <td>{{ ticket.choisi ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ticket_index') }}">back to list</a>

    {% if 'ROLE_ADMIN' in app.user.roles  %}<a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}">edit</a>{% endif %}

    {% if 'ROLE_ADMIN' in app.user.roles  %} {{ include('ticket/_delete_form.html.twig') }}{% endif %}
{% endblock %}
